<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2><%= post.description %></h2>
    <%= link_to post.description, post_path(post) %>
    <%= link_to "Delete #{post.description}", post_path(post), method: :delete %>
  <% end %>
<% else %>
  <h1>No posts yet</h1>
<% end %>

<a href="/posts/new">Add a post</a>
